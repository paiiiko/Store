@using Store.WebUI.ViewModels
@model LoginViewModel

<div class="login justify-content-center col-lg-5 col-mb-5 col-11">
    <h5 class="d-flex justify-content-center align-items-center">
        ВХОД В ПРОФИЛЬ
    </h5>
    <form class="login-form" asp-controller="Auth" asp-action="Login" method="post">
        <div>
            <input class="form" asp-for="Email" placeholder="Электронная почта">
            <span asp-validation-for="Email"></span>
        </div>
        <div>
            <input class="form" asp-for="Password" placeholder="Пароль">
            <span asp-validation-for="Password"></span>
        </div>
        <div>
            <label class="forgot">
                Забыли&nbsp
                <a href="#">пароль?</a>
            </label>
        </div>
        <div>
            <input class="btn" type="submit" value="Войти">
        </div>
    </form>
    <div>
        <label>
            Нет аккаунта?
            <br>
            Зарегистрируйтесь
            <a asp-action="Registration">здесь</a>
        </label>
    </div>
</div>